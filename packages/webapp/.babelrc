{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": "ES2020",
        "loose": true
      }
    ],
    [
      "@babel/preset-react",
      {
        "runtime": "automatic"
      }
    ]
  ],
  "plugins": [
    "@babel/plugin-syntax-bigint",
    "@babel/plugin-proposal-dynamic-import",
    "@babel/plugin-transform-typescript",
    "@babel/plugin-proposal-nullish-coalescing-operator",
    "@babel/plugin-proposal-optional-chaining"
  ]
}