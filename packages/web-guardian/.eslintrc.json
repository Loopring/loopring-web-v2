{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "react-hooks",
    "@typescript-eslint"
  ],
  "extends": [
    "react-app"
  ],
  "overrides": [
    {
      "files": [
        "**/*.tsx",
        "**/*.ts"
      ],
      "rules": {
        "import/no-anonymous-default-export": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "react-hooks/rules-of-hooks": "error",
        // 检查 Hook 的规则
        "react-hooks/exhaustive-deps": "warn"
        // 检查 effect 的依赖
      }
    }
  ]
}
