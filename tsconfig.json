{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@loopring-web/webapp": ["./packages/webapp/src"],
      "@loopring-web/webapp/*": ["./packages/webapp/src/*"],
      "@loopring-web/web-bridge": ["./packages/web-bridge/src"],
      "@loopring-web/web-bridge/*": ["./packages/web-bridge/src/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist", "../*.stories.*", "docs"]
}
